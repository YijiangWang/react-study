{
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "ecmaVersion": 6,
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-tabs": 0,    
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "no-console": "off",
    "react/prop-types": 0
  }
}
